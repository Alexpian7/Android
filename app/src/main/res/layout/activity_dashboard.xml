<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Imagen de perfil -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Texto del email del usuario -->
    <TextView
        android:id="@+id/userEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No hay usuario logueado"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/profileImage"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Botones de navegación -->
    <Button
        android:id="@+id/navHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicio"
        app:layout_constraintTop_toBottomOf="@id/userEmail"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/navAddEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Empleado"
        app:layout_constraintTop_toBottomOf="@id/navHome"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/navEmployees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Empleados"
        app:layout_constraintTop_toBottomOf="@id/navAddEmployee"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/navAttendance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asistencia"
        app:layout_constraintTop_toBottomOf="@id/navEmployees"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/navAnalytics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Analítica"
        app:layout_constraintTop_toBottomOf="@id/navAttendance"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Botón de cierre de sesión -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar Sesión"
        app:layout_constraintTop_toBottomOf="@id/navAnalytics"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Botón para cambiar de tema -->
    <Button
        android:id="@+id/themeSwitcher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar Tema"
        app:layout_constraintTop_toBottomOf="@id/logoutButton"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
